{
	"builders": [
	{
		"name": "{{user `osnameshort`}}-base-vbox",
		"output_directory": "{{user `osnameshort`}}-base-vbox",
		"type": "virtualbox-iso",
		"iso_url": "iso/{{user `isoname`}}",
		"iso_checksum": "{{user `isomd5`}}",
		"iso_checksum_type": "md5",
		"headless": false,
		"vm_name": "{{user `osnameshort`}}-base-vbox",
		"communicator": "ssh",
		"shutdown_command": "shutdown -s -f -t 1",
		"shutdown_timeout": "5m",
		"ssh_username": "vagrant",
		"ssh_password": "vagrant",
		"ssh_wait_timeout": "8h",
		"guest_os_type": "{{user `vboxos`}}",
      "floppy_files": [
        "./answerfiles/{{user `osnameshort`}}/autounattend.xml",
        "./scripts/disableautoupdate.cmd",
        "./scripts/hibernation.cmd",
        "./scripts/openssh.ps1",
        "./scripts/powershell.cmd",
        "./scripts/rdp.cmd",
        "./scripts/vagrantuser.cmd"
	  ],
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "2048"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "2"
        ]
      ]
	}
	],
	"provisioners": [

	],
	"variables": {
	 	"osnameshort": "Windows7x64",
	 	"osnamelong": "Windows 7 x64",
	 	"isoname": "en_windows_7_enterprise_with_sp1_x64_dvd_u_677651.iso",
	 	"isomd5": "6467c3875955df4514395f0afcaaa62a",
	 	"vboxos": "Windows7_64"
 }
}
