{
	"builders": [
	{
		"name": "{{user `osnameshort`}}",
		"output_directory": "{{user `osnameshort`}}",
		"type": "vmware-vmx",
		"source_path": "Blank/{{user `osnamelong`}}/{{user `osnamelong`}}.vmx",
		"headless": false,
		"vm_name": "{{user `osnameshort`}}",
		"communicator": "winrm",
		"winrm_username": "administrator",
		"winrm_password": "P@ssw0rd01",
		"winrm_timeout": "4h",
		"shutdown_command": "shutdown -s -f -t 1",
		"shutdown_timeout": "5m"
	}
],
"post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": true,
      "output": "{{user `osnameshort`}}.box",
      "vagrantfile_template": "vagrantfile-{{user `osnameshort`}}.template"
    }
  ],
	"variables": {
	 "osnameshort": "Windows10x64",
	 "osnamelong": "Windows 10 x64"
 }
}
